set encoding utf8

# Terminal PDF
set terminal pngcairo enhanced font "Noto Sans,10" size 24cm,18cm
set output "error_estadistico_vs_bin_M_T2_6.png"

set xlabel "Tamaño de bin"
set ylabel "Error estadistico"
set title "Dependencia del error estadistico para el tamaño del bloque en el analisis de la Magnetizacion (T = 2.6)"
set grid

set lmargin 12    # margen izquierdo
set rmargin 5     # margen derecho
set bmargin 5     # margen inferior
set tmargin 5     # margen superior

set logscale x   # o: set logscale x 2

# Saltar las 2 primeras líneas y usar col 1 (bin) y col 3 (Error estadistico)
plot "OBS_L100_T2_6_MCS10_6_output.dat" every ::2 using 1:3 with linespoints title "Error estadistico"

unset output          # Cierra el PDF
set terminal qt       # (opcional) vuelves a la ventana interactiva
